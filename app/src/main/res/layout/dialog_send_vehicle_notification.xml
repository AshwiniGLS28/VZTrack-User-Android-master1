<!--            fancy:fb_textColor="#FFFFFF" />-->
        <vztrack.gls.com.vztrack_user.CustumView.CustomButton

            android:id="@+id/btn_Send_Notification"
            style="@style/BottomButton"
            android:text="@string/sendmessage">

        </vztrack.gls.com.vztrack_user.CustumView.CustomButton>
    </LinearLayout>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/callbase_bg"
    android:orientation="vertical">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@drawable/logo_vz_track">

    </ImageView>
    <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="@string/vztrack_new_visitor"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@string/font_family_black"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_weight="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/visitor_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/cardviewbordercolor"
            android:src="@drawable/contact"
            android:layout_margin="5dp"
            android:padding="10dp" />

        <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
            android:id="@+id/visitor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@string/font_family_medium"/>

        <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
            android:id="@+id/visit_purpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@string/font_family_medium"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"

        android:gravity="bottom">

<!--        <vztrack.gls.com.vztrack_user.CustumView.CustumTextView-->
<!--            android:id="@+id/view_visitor"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:layout_weight="1"-->
<!--            android:text="@string/view_detilas"-->
<!--            android:padding="15dp"-->
<!--            android:textSize="15sp"-->
<!--            android:textStyle="bold"-->
<!--            android:background="@android:color/holo_green_light"-->
<!--            android:textColor="@color/colorWhite"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/close"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:src="@drawable/icon_deny"
                android:layout_gravity="center"
                android:layout_height="60dp">

            </ImageView>

            <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deny"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:id="@+id/txtcancel"
                android:textColor="@color/mdtp_white"
              />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/view_visitor"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:id="@+id/imgok"
                android:src="@drawable/icon_approve"
                android:layout_height="60dp">

            </ImageView>

            <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/approve"
                android:textSize="16sp"
                android:id="@+id/txtok"
                android:layout_gravity="center"
                android:textColor="@color/mdtp_white"
                />


        </LinearLayout>


        <!--        <vztrack.gls.com.vztrack_user.CustumView.CustumTextView-->

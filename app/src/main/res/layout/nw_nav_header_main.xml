<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/colorWhite"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:background="@color/colorPrimary"
           android:paddingLeft="16dp"
           android:layout_marginTop="20dp"
           android:paddingRight="5dp"
           android:paddingTop="16dp"
           android:paddingBottom="16dp"
           android:orientation="horizontal"

           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:layout_marginBottom="15dp"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="35dp"
                   android:layout_height="35dp"
                   android:id="@+id/imgvzlogo"
                   android:scaleType="centerInside"
                   android:src="@drawable/logo_vz_track"
                   />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_marginBottom="15dp"
               android:layout_height="wrap_content">

               <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textSize="18sp"
                   style="@style/MyTextViewStyleForHeadingWhite"
                   android:text="@string/VZTrack"></vztrack.gls.com.vztrack_user.CustumView.CustomTextView>

               <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                   android:layout_width="match_parent"
                   android:text="@string/meetsafe"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textSize="14sp"
                   style="@style/MyTextViewStyleForHeadingWhite"
                   android:layout_height="wrap_content">

               </vztrack.gls.com.vztrack_user.CustumView.CustomTextView>
           </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_gravity="right"
               android:layout_marginBottom="10dp"
               android:gravity="right"
               android:orientation="horizontal">

               <ImageView
                   android:id="@+id/imgCall"
                   android:layout_width="25dp"
                   android:layout_height="30dp"
                   android:layout_margin="5dp"
                   android:src="@drawable/call_white"/>

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_margin="5dp"
                   android:id="@+id/imgsetting"
                   android:src="@drawable/ic_settings"/>
           </LinearLayout>
       </LinearLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.google.android.material.card.MaterialCardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="90dp"
               style="@style/ProfileCardViewStyle"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:id="@+id/materialcard"
               android:background="@drawable/visitorcardborder"
               app:strokeColor="@color/cardviewbordercolor"
               app:strokeWidth="1dp"
               >
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:padding="5dp"
                   android:layout_margin="1dp"
                   android:background="@color/colorWhite"
                   android:orientation="vertical">

                   <LinearLayout
                       android:id="@+id/cardview_Linear"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"

                           android:orientation="horizontal">


                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="5dp"
                               android:layout_marginRight="5dp"
                               android:layout_weight="0.25"
                               android:orientation="vertical">


                               <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                                   android:id="@+id/tvFLatOwnerName"
                                   style="@style/MyTextViewStyleForHeading"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:singleLine="true"
                                   android:text="cndjkfbjdf"
                                   android:textSize="@dimen/card_main_heading" />

                               <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                                   android:id="@+id/tvFLatNo"
                                   style="@style/MyTextViewStyleForSubHeading"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="fhjfd"
                                   android:textSize="@dimen/card_sub_heading2"
                                   android:textColor="@color/subtextcolor"

                                   android:textStyle="bold" />


                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal">

                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="0.3"
                                       android:orientation="vertical">

                                       <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                                           android:id="@+id/tvWing"
                                           style="@style/MyTextViewStyleForRippleText"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:textColor="@color/othertext"
                                           android:gravity="left"
                                           android:singleLine="true"
                                           android:text="dgvdv" />

                                       <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                                           android:id="@+id/tvSocietyName"
                                           style="@style/MyTextViewStyleForRippleText"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:textColor="@color/othertext"
                                           android:layout_below="@+id/tvDateTime"
                                           android:gravity="left"
                                           android:text="rucha" />
                                   </LinearLayout>



                               </LinearLayout>

                           </LinearLayout>
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:orientation="vertical"
                               android:layout_weight="0.7"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:layout_height="wrap_content">

                               <de.hdodenhof.circleimageview.CircleImageView
                                   android:id="@+id/circleViewProfile"
                                   android:layout_width="75dp"
                                   android:layout_height="75dp"
                                   app:civ_border_width="1dp"
                                   app:civ_border_color="@color/cardviewbordercolor"
                                   android:layout_gravity="center"
                                   android:src="@drawable/ic_avatar" />


                           </LinearLayout>


                       </LinearLayout>


                   </LinearLayout>



               </RelativeLayout>


           </com.google.android.material.card.MaterialCardView>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/drawermenu_recycler_view"
               android:layout_width="match_parent"
               android:layout_below="@id/materialcard"
               android:layout_gravity="top"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="50dp"
               android:background="@color/colorWhite"
               android:layout_height="match_parent" />

<!--           <GridView-->
<!--               android:id="@+id/grid"-->
<!--               android:layout_width="match_parent"-->
<!--               android:layout_height="match_parent"-->
<!--               android:layout_below="@id/materialcard"-->
<!--               android:layout_gravity="top"-->
<!--               android:layout_marginTop="5dp"-->
<!--               android:layout_marginBottom="50dp"-->
<!--               android:background="@color/colorWhite"-->
<!--               android:columnWidth="100dp"-->
<!--               android:gravity="center"-->
<!--               android:numColumns="4"-->
<!--               android:stretchMode="columnWidth" />-->



       </RelativeLayout>


   </FrameLayout>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_main_heading"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="Feedback/Queries"/>

                <vztrack.gls.com.vztrack_user.CustumView.CustomEdittext
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:singleLine="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    style="@style/MyTextViewStyleForEdittext"
                    android:background="@drawable/edittext_background_cardviewcolor"
                    android:inputType="textCapSentences"
                    android:hint="Enter your name"
                    android:visibility="gone"/>

            <vztrack.gls.com.vztrack_user.CustumView.CustomEdittext
                android:id="@+id/etEmailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:singleLine="true"
                style="@style/MyTextViewStyleForEdittext"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edittext_background_cardviewcolor"
                android:inputType="textEmailAddress"
                android:hint="Enter Email Id"/>

                <vztrack.gls.com.vztrack_user.CustumView.CustomEdittext
                    android:id="@+id/etMessage"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/edittext_cardview_shadow_color"
                    style="@style/MyTextViewStyleForEdittext"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:inputType="textMultiLine"
                    android:maxLength="100"
                    android:hint="Feedback message"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background_search"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:orientation="vertical">

            <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_margin="2dp"
                android:text="Experience with us"/>

            <com.hsalf.smilerating.SmileRating
                android:id="@+id/smile_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:visibility="invisible">

            </LinearLayout>

            <vztrack.gls.com.vztrack_user.CustumView.CustomButton
                android:id="@+id/btn_cancle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.6"

                android:layout_margin="10dp"
                android:textColor="@color/colorWhite"
               android:background="@drawable/rounded_button"
                android:text="Cancel"/>


           <vztrack.gls.com.vztrack_user.CustumView.CustomButton
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
               android:textColor="@color/colorWhite"
               android:background="@drawable/rounded_button"

               android:text="Submit"/>

        </LinearLayout>


</LinearLayout>
    </ScrollView>



</LinearLayout>

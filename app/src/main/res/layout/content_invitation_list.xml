<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_invitation_list">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/invitationList"
        android:dividerHeight="0dp"
        android:layout_marginTop="@dimen/card_margin_top"
        android:divider="#00000000"
        android:visibility="gone">

    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noDataLL"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:id="@+id/progress_bar"/>
        <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            style="@style/MyTextViewStyleForHeading"
            android:text="Loading invitations.."
            android:id="@+id/messageText"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noImageDataLayout"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingBottom="15dp"
            android:src="@drawable/nodataimage"
            android:id="@+id/imgnodata"/>
        <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray"
            android:layout_margin="10dp"
            style="@style/MyTextViewStyleForHeading"
            android:id="@+id/nodatatext"/>
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">

    <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/ripplecolor"
        style="@style/MyTextViewStyleForHeading"
        android:visibility="gone"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginBottom="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        style="@style/VisitorCardViewStyle"
        android:background="@drawable/visitorcardborder"
        fancy:strokeColor="@color/cardviewbordercolor"
        fancy:strokeWidth="1dp"
        android:id="@+id/cvPoolCar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                        style="@style/MyTextViewStyleForSubHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/by"
                        android:textColor="@color/colorPrimary" />

                    <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                        android:id="@+id/tvFlatNo"
                        style="@style/MyTextViewStyleForRainbowSubHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:text="F99"
                       />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical">

<!--                    <ImageView-->
<!--                        android:id="@+id/imgCall"-->
<!--                        android:layout_width="25dp"-->
<!--                        android:layout_height="25dp"-->
<!--                        android:layout_marginLeft="4dp"-->
<!--                        android:src="@drawable/ic_action_phone_start" />-->

                    <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                        android:id="@+id/tvMobileNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTextViewStyleForSubHeading"

                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimary"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="@color/viewcolor"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_source"/>

            <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                android:id="@+id/tvSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyTextViewStyleForSubHeading"
                android:textSize="14sp"
                android:text="Pune"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_destination"/>

                <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                    android:id="@+id/tvDestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MyTextViewStyleForSubHeading"
                    android:textSize="14sp"
                    android:text="Ahmednagar"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

<!--                <ImageView-->
<!--                    android:layout_width="@dimen/icon_size"-->
<!--                    android:layout_height="@dimen/icon_size"-->
<!--                    android:src="@drawable/car_seat"/>-->

                <LinearLayout
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="18dp"
                        android:src="@drawable/car_seat" />

                </LinearLayout>


                <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                    android:id="@+id/tvSeats"
                    style="@style/MyTextViewStyleForRainbowSubHeading"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="999" />

                <!--                <LinearLayout-->
                <!--                    android:layout_width="27dp"-->
                <!--                    android:layout_height="27dp"-->
                <!--                    android:layout_marginLeft="20dp"-->
                <!--                    android:gravity="center">-->
                <!--                    <ImageView-->
                <!--                        android:layout_width="18dp"-->
                <!--                        android:layout_height="18dp"-->
                <!--                        android:src="@drawable/clock"/>-->
                <!--                </LinearLayout>-->



                <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                    android:id="@+id/tvDateAndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="@color/othertext"
                    style="@style/MyTextViewStyleForSubHeading"
                    android:text="20 May 2018"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="@color/viewcolor"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:orientation="horizontal">
               <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/MyTextViewStyleForSubHeading"
                   android:textStyle="bold"
                   android:textColor="@color/colorPrimary"
                   android:text="@string/remark" />

               <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                   android:id="@+id/tvRemark"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/othertext"
                   android:textSize="14sp"
                   style="@style/MyTextViewStyleForRainbowSubHeading"
                   android:text="@string/remark"/>

           </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
<!--                             fancy:fb_radius="5dp"-->
<!--                             fancy:fb_text="@string/pay"-->
<!--                             fancy:fb_textColor="#3b5998" />-->
                     </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

<!--                <LinearLayout-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:orientation="vertical"-->
<!--                    android:gravity="end">-->




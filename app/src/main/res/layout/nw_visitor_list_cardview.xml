<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/mtrl_card_spacing"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:layout_marginRight="@dimen/mtrl_card_spacing"
    style="@style/VisitorCardViewStyle"
    android:background="@drawable/visitorcardborder"
    app:strokeColor="@color/cardviewbordercolor"
    app:strokeWidth="1dp"
    android:id="@+id/card_view">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/cardview_Linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_weight="0.7"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:layout_height="wrap_content">

                   <de.hdodenhof.circleimageview.CircleImageView
                       android:id="@+id/circleView"
                       android:layout_width="70dp"
                       android:layout_height="70dp"
                       app:civ_border_width="1dp"
                       app:civ_border_color="@color/cardviewbordercolor"
                       android:layout_gravity="center"
                       android:src="@drawable/ic_avatar" />

                   <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                       android:id="@+id/txincorrect"
                       style="@style/MyTextViewStyleForSmallText"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:background="@drawable/redfilleddrawble"
                       android:gravity="center"
                       android:paddingLeft="5dp"
                       android:paddingRight="5dp"
                       android:text="Incorrect"
                       android:textColor="@color/nwwhite"
                       android:textSize="10sp"
                       android:visibility="visible" />
               </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.2"
                    android:orientation="vertical">


                    <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                        android:id="@+id/tvTitle"
                        style="@style/MyTextViewStyleForHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="cndjkfbjdf"/>

                    <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                        android:id="@+id/tvMobile"
                        style="@style/MyTextViewStyleForSubHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="fhjfd"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:orientation="vertical">

                            <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                                android:id="@+id/tvDateTime"
                                style="@style/MyTextViewStyleForRainbowSubHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="dgvdv" />

                            <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                                android:id="@+id/tvPurpose"
                                style="@style/MyTextViewStyleForRainbowSubHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvDateTime"
                                android:gravity="left"
                                android:text="dcvcfd" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lltvapprovestatus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:orientation="vertical"
                            android:visibility="gone">

<!--                            <vztrack.gls.com.vztrack_user.CustumView.CustomTextView-->
<!--                                style="@style/MyTextViewStyleForSubHeading"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:gravity="center" />-->

                            <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                                android:id="@+id/tvapprovestatus"
                                style="@style/MyTextViewStyleForRainbowSubHeading"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/tvDateTime"
                                android:gravity="right|bottom" />
                            <!--                            <vztrack.gls.com.vztrack_user.CustumView.CustumTextView-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:visibility="visible"-->

                            <!--                                ></vztrack.gls.com.vztrack_user.CustumView.CustumTextView>-->
                            <!--                            <vztrack.gls.com.vztrack_user.CustumView.CustumTextView-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:id="@+id/tvapprovestatus"-->

                            <!--                                ></vztrack.gls.com.vztrack_user.CustumView.CustumTextView>-->
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llapprovalbuttons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:layout_gravity="right"
                            android:orientation="horizontal"
                            android:visibility="visible">


                            <LinearLayout
                                android:id="@+id/tvdeny"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/nw_deny"

                                    ></ImageView>

                                <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                                    style="@style/MyTextViewStyleForSTooltip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="9sp"
                                    android:textColor="@color/ripplecolor"

                                    android:text="@string/deny">

                                </vztrack.gls.com.vztrack_user.CustumView.CustomTextView>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tvapprove"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.4"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/nw_approve"></ImageView>

                                <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                                    style="@style/MyTextViewStyleForSTooltip"
                                    android:layout_width="wrap_content"
                                    android:textSize="9sp"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/ripplecolor"
                                    android:text="@string/approve">


                                </vztrack.gls.com.vztrack_user.CustumView.CustomTextView>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thermal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/cardviewbordercolor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center">
                    <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                        android:id="@+id/temperature"
                        style="@style/MyTextViewStyleForRainbowSubHeading"
                        android:padding="2dp"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:gravity="left"
                        android:text="Temperature : 100" />

                    <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
                        android:id="@+id/masked"
                        style="@style/MyTextViewStyleForRainbowSubHeading"
                        android:padding="2dp"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:gravity="right"
                        android:text="Masked" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgMarkError"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_more_vert" />

    </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


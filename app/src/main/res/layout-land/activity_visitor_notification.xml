<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/callbase_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="@string/vztrack_new_visitor"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:fontFamily="@string/font_family_black"
            android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/visitor_photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:src="@drawable/contact"/>


        <TextView
            android:id="@+id/visitor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:fontFamily="@string/font_family_medium"/>

        <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            style="@style/MyTextViewStyleForSubHeading"
            android:textColor="@color/callpurposecolor"
            android:textSize="18sp"
            android:visibility="gone"/>

        <vztrack.gls.com.vztrack_user.CustumView.CustomTextView
            android:id="@+id/mask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            style="@style/MyTextViewStyleForSubHeading"
            android:textColor="@color/callpurposecolor"
            android:textSize="18sp"
            android:visibility="gone"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/close"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/denynew"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:layout_height="100dp">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deny"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:id="@+id/txtcancel"
                android:textColor="#ffffff"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/view_visitor"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:id="@+id/imgok"
                android:src="@drawable/approvenew"
                android:layout_height="100dp">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/approve"
                android:textSize="18sp"
                android:id="@+id/txtok"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                />


        </LinearLayout>



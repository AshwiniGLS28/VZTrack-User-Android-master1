    <style name="PickerTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/pollcolor</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <style name="SmoothCheckBoxStyle">
        <item name="color_checked">@color/pollcolor</item>
        <item name="color_unchecked">@color/ripplecolor</item>
        <item name="color_unchecked_stroke">@color/cardviewbordercolor</item>
        <item name="color_tick">@color/tabcolor</item>
    </style>

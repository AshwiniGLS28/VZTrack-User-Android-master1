        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/ripplecolor</item>
        <item name="colorControlNormal">@color/othertext</item>
        <item name="colorControlActivated">@color/othertext</item>
        <item name="android:textColor">@color/othertext</item>
        <item name="android:textStyle">bold</item>
    </style>
